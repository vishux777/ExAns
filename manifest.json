{
  "manifest_version": 3,
  "name": "Chrome Background Theme",
  "description": "An AI-powered assistant for educational content",
  "version": "1.0",
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle the extension on or off"
    }
  }
}